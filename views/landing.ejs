<script>
    $("#searchButton").click(()=>{
        let country = $("#countryList").val();
        window.location = `/${country.toLowerCase()}-live-prices`;
    });

    $('#ethPrice').webTicker({
        height: '80px',
        duplicate:true,
        startEmpty:false,
        transition: "ease"
    });
    $('#btcPrice').webTicker({
        height: '80px',
        duplicate:true,
        rssfrequency:0,
        startEmpty:false,
        transition: "ease"
    });

    setTimeout(()=> {
        $('#ethPrice').trigger('mouseleave');
        $('#btcPrice').trigger('mouseleave');
    }, 3000);


</script>
</body>

</html>
